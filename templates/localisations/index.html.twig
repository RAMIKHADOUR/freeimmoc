{% extends 'base.html.twig' %}

{% block title %}Localisations index{% endblock %}

{% block body %}
    <h1>Localisations index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>N_voie</th>
                <th>Type_voie</th>
                <th>Nom_voie</th>
                <th>Villes</th>
                <th>Codepostales</th>
                <th>Region</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for localisation in localisations %}
            <tr>
                <td>{{ localisation.id }}</td>
                <td>{{ localisation.nVoie }}</td>
                <td>{{ localisation.typeVoie }}</td>
                <td>{{ localisation.nomVoie }}</td>
                <td>{{ localisation.villes }}</td>
                <td>{{ localisation.codepostales }}</td>
                <td>{{ localisation.region }}</td>
                <td>
                    <a href="{{ path('app_localisations_show', {'id': localisation.id}) }}">show</a>
                    <a href="{{ path('app_localisations_edit', {'id': localisation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_localisations_new') }}">Create new</a>
{% endblock %}
